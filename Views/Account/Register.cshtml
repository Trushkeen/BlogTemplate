@model BlogTemplate.Core.ViewModels.RegisterVM

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Введите логин</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="PasswordConfirmation">Повторите пароль</label><br />
            <input asp-for="PasswordConfirmation" />
            <span asp-validation-for="PasswordConfirmation" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>